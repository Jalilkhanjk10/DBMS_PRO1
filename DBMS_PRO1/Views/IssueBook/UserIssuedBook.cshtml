@model IEnumerable<DBMS_PRO1.Models.UserIssuedBookModel>

@{
    ViewBag.Title = "UserIssuedBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <style>
        .col {
            padding: 5px 180px;
        }
    </style>
</head>

<div class="col">

    <h2>Your Issued Books</h2>

    <p>
        @Html.ActionLink("View Books", "ViewIssue")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Booktitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bookissuancedate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bookduedate)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Booktitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Bookissuancedate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Bookduedate)
                </td>
                <td>
                    @Html.ActionLink("Return Book", "ReturnBook", new { /* id=item.PrimaryKey */ }) |
                    @*@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
                </td>
            </tr>
        }

    </table>

</div>

